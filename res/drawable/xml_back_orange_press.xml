<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF9f4901"
                android:endColor="#FF9f4901" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#FF9f4901"
                android:endColor="#FF9f4901" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape>
            <gradient
                android:startColor="#FFFF7400"
                android:endColor="#FFFF7400" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
