<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF284F93"
                android:endColor="#FF284F93" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#FF284F93"
                android:endColor="#FF284F93" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape>
            <gradient
                android:startColor="#FF4080EE"
                android:endColor="#FF4080EE" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
